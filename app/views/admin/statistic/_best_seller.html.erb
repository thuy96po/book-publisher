<div class="col-md-6">
  <div id="chart"></div>
</div>

<div class="col-md-6">
  <div class="table-responsive col-md-12">
    <table id="mytable" class="table table-bordred table-striped">
      <thead>
      <th><%= t "book_name" %></th>
      <th class="text-center"><%= t "carts.show.quantity" %></th>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td class="text-center"><%= book.quantity.to_i %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="row float-right">
      <%== pagy_nav @pagy %>
    </div>
    <div class="clearfix"></div>
  </div>
</div>

<script type="text/javascript">
    var array = <%= @books_chart.to_s.html_safe %>;
    var title = "<%= (t ".title_chart", chart_items: Settings.chart_items) %>";

    function drawChart() {
        var data = google.visualization.arrayToDataTable (array);

        var options = {"title": title, "width":550, "height":400};

        var chart = new google.visualization.PieChart(document.getElementById("chart"));
        chart.draw(data, options);
    }
</script>
