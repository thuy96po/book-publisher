<div class="row">
  <div class="col-md-12">
    <div class="row">
      <h4 class="col-md-6"><%= title %></h4>
      <%= link_to admin_bills_path, class: "btn btn-info float-right col-md-6" do %>
        <span class="glyphicon glyphicon-th-list"> <strong><%= t "admin.bills.index.list" %></strong></span>
      <% end %>
    </div>
    <hr>
    <%= form_for [:admin, @bill], class: "form-horizontal" do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= render "readonly_field" %>
      <div class="form-group row">
        <%= f.label :status, class: "col-md-2" %>
        <div class="col-md-4">
          <%= f.select :status, @status,{}, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-2"></div>
        <div class="col-md-4">
          <%= f.submit t(".submit"), class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
