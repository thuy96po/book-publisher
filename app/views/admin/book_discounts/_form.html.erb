<div class="row">
  <div class="col-md-12">
    <div class="row">
      <h4 class="col-md-6"><%= title%></h4>
      <%= link_to admin_book_discounts_path, class: "btn btn-info float-right col-md-6" do %>
        <span class="glyphicon glyphicon-th-list"> <strong><%= t "admin.book_discounts.list" %></strong></span>
      <% end %>
    </div>
    <hr>
    <%= form_for [:admin, @book_discount], class: "form-horizontal" do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="form-group row">
        <%= f.label :book_id, class: "col-md-2" %>
        <div class="col-md-4">
          <%= f.select :book_id, Book.all.collect {|p| [ p.name, p.id ]}, {include_blank: t("admin.book_discounts.select_book")}, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :discount, t("admin.book_discounts.discount"), class: "col-md-2" %>
        <div class="col-md-4">
          <%= f.number_field :discount, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :start_date, class: "col-md-2" %>
        <div class="col-md-4">
          <%= f.date_field :start_date, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :end_date, class: "col-md-2" %>
        <div class="col-md-4">
          <%= f.date_field :end_date, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-2"></div>
        <div class="col-md-4">
          <%= f.submit t(".submit"), class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
