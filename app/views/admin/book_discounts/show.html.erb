<%= provide :title, t(".title") %>
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <h4 class="col-md-6"><%= t "admin.book_discounts.list" %></h4>
      <%= link_to admin_book_discounts_path, class: "btn btn-info float-right col-md-6" do %>
        <span class="glyphicon glyphicon-th-list"> <strong><%= t "admin.book_discounts.list" %></strong></span>
      <% end %>
    </div>
    <hr>
    <div class="form-group row">
      <div class="col-md-2">
        <strong><%= t "book"%>:</strong>
      </div>
      <div class="col-md-4">
        <%= @book_discount.book_name %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-2">
        <strong><%= t "discount"%>:</strong>
      </div>
      <div class="col-md-4">
        <%= @book_discount.discount %> %
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-2">
        <strong><%= t "admin.book_discounts.index.start_date"%>:</strong>
      </div>
      <div class="col-md-4">
        <%= convert_date @book_discount.start_date %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-2">
        <strong><%= t "admin.book_discounts.index.end_date"%>:</strong>
      </div>
      <div class="col-md-4">
        <%= convert_date @book_discount.end_date %>
      </div>
    </div>
  </div>
</div>
