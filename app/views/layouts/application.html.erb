<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield :title %></title>
    <%= render "layouts/rails_default" %>
    <%= render "layouts/shim" %>
  </head>

  <body>
    <%= render "layouts/header"  %>
    <div class="container-fluid">
      <% if notice %>
        <div class="page-alert alert alert-success"><%= notice %></div>
      <% elsif alert %>
        <div class="page-alert alert alert-danger"><%= alert %></div>
      <% else %>
        <% flash.each do |message_type, message| %>
          <div class="page-alert alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
      <% end %>
      <%= yield %>
    </div>
    <%= render "layouts/footer"  %>
  </body>
</html>
